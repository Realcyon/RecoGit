<html>
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" type="text/css" href="/public/global.css" />
    <title>{{name}}</title>
    {{!-- prettier-ignore --}}
    <style>
    main{
      display:grid;
      grid-template-columns: 60vw 30vw;
      grid-template-rows: 1fr;
      grid-gap: 10px;
      max-width: 90vw

    }

    article{
      display: grid;
      grid-gap: 10px;
      grid-template-columns: repeat(auto-fit, 150px);
      grid-auto-rows: 300px;
      justify-content: center;
    }

    #card{
      height: 100%;
      display: grid;
      grid-template-columns: 1fr 1fr 1fr;
      grid-template-rows: 1fr 1fr 1fr 1fr 1fr 1fr;
      background-color:whitesmoke;
      color: black;
      margin: 0px;
    }


    .titlePiece{
      grid-row: 3/4;
      grid-column: 1/3;
    }
    
    .datePiece{
      grid-row: 4/5;
      grid-column: 1/4;
      text-align: right;
    }
    
    .notesPiece{
      grid-row: 5/7;
      grid-column: 1/4;
      text-align: left;
    }
    #edited{
      background-color: brown;
      display: grid;
      grid-template-columns: 10vw 10vw 10vw;
      grid-template-rows: 10vw 10vw 10vw 10vw 10vw 10vw;
      
    }

  </style>
  </head>
  <body>
    {{>header}}
    <nav>{{{navigation}}}</nav>
    <main class="content">

      <article>
          {{#each piece}}
          <a>
          <section id="card" onclick="displaySelection('{{this.title}}')" >

              <h2 class="titlePiece">{{this.title}}</h2>
              <p class="datePiece" id="{{this.title}}Date">{{this.additionDate}}</p>
              <p class="notesPiece">{{this.notes}}</p>
            </section>
            </a>
          {{/each}}
      </article>
        <form id="edited">
              <h2 class="titlePiece" id="titleDisplay">titre</h2>
              <p class="datePiece" id="dateDisplay">date</p>
              <textarea class="notesPiece" id="notesDisplay"></textarea>
              <input type="submit">
        </form>
    </main>
    {{>footer}}
  </body>
  <script>

    const allDate =  Object.values(document.getElementsByClassName("datePiece"));

   allDate.forEach((paragraphe)=>{
      const rawDate = parseInt(paragraphe.innerHTML)
      const newDate = new Date(rawDate)
      const displayDate = newDate.getDate() +' '+ newDate.getMonth() +' '+ newDate.getFullYear()
      document.getElementById(paragraphe.id).innerHTML=displayDate
    })


    
    async function displaySelection(selectedTitle){
      
    
    const res = await fetch("/api/section/display",{
        method:"post",
        headers:{
        "Content-Type":"application/json"
        },

        body:JSON.stringify({
          title:selectedTitle,
          section:'{{name}}'
        })
        
      })//.catch(err => console.err("Couldn't fetch ", err));
      const editedPiece = await res.json();
      console.log(editedPiece)

      const rawDate = parseInt(editedPiece.additionDate)
      const newDate = new Date(rawDate)
      console.log(Object.keys(newDate))
      const displayDate = newDate.getDate() +' '+ newDate.getMonth() +' '+ newDate.getFullYear()
      document.getElementById("titleDisplay").innerHTML = editedPiece.title;
      document.getElementById("dateDisplay").innerHTML = displayDate;
      document.getElementById("notesDisplay").value = editedPiece.notes;
    };
    
    const formEdited = document.querySelector('form');

    formEdited.addEventListener("submit", async (ev) => {
      ev.preventDefault();
      console.log(document.getElementById("notesDisplay").value)
