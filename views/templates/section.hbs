<html>
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" type="text/css" href="/public/global.css" />
    <title>{{name}}</title>
    {{!-- prettier-ignore --}}
    <style>


    article{
      display: grid;
      grid-gap: 10px;
      grid-template-columns: repeat(auto-fit, 150px);
      justify-content: center;
    }

    section{
      display: grid;
      grid-template-columns: 50px 50px 50px;
      grid-template-rows: 50px 50px 50px 50px 50px 50px;
      background-color:whitesmoke;
      color: black;
      margin: 0px;
    }


    #titlePiece{
      grid-row: 3/4;
      grid-column: 1/3;
    }
    #datePiece{
      grid-row: 4/5;
      grid-column: 1/4;
      text-align: right;
    }
    
    #notesPiece{
      grid-row: 5/7;
      grid-column: 1/4;
      text-align: right;
    }

  </style>
  </head>
  <body>
    {{>header}}
    <nav>{{{navigation}}}</nav>
    <main class="content">
      <article>
        
          {{#each piece}}
          <a>
          <section>
              <h2 id="titlePiece">{{this.title}}</h2>
              <p id="datePiece">{{this.additionDate}}</p>
              <p id="notesPiece">{{this.notes}}</p>
            </section>
            </a>
          {{/each}}
      </article>
    </main>
    {{>footer}}
  </body>
</html>