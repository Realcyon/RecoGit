<html>
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" type="text/css" href="/public/global.css" />
    <title>{{name}}</title>
    {{!-- prettier-ignore --}}
    <style>
    main{
      display:grid;
      grid-template-columns: 60vw 30vw;
      grid-template-rows: 1fr;
      grid-gap: 10px;
      max-width: 90vw

    }

    article{
      display: grid;
      grid-gap: 10px;
      grid-template-columns: repeat(auto-fit, 150px);
      grid-auto-rows: 300px;
      justify-content: center;
    }

    #card{
      height: 100%;
      display: grid;
      grid-template-columns: 1fr 1fr 1fr;
      grid-template-rows: 1fr 1fr 1fr 1fr 1fr 1fr;
      background-color:whitesmoke;
      color: black;
      margin: 0px;
    }


    .titlePiece{
      grid-row: 3/4;
      grid-column: 1/3;
    }
    
    .datePiece{
      grid-row: 4/5;
      grid-column: 1/4;
      text-align: right;
    }
    
    .notesPiece{
      grid-row: 5/7;
      grid-column: 1/4;
      text-align: left;
    }
    #edited{
      background-color: brown;
      display: grid;
      grid-template-columns: 10vw 10vw 10vw;
      grid-template-rows: 10vw 10vw 10vw 10vw 10vw 10vw;
      
    }

  </style>
  </head>
  <body>
    {{>header}}
    <nav>{{{navigation}}}</nav>
    <main class="content">

      <article>
          {{#each piece}}
          <a>
          <section id="card" onclick="dispalySelection('{{this.title}}')" >

              <h2 class="titlePiece">{{this.title}}</h2>
              <p class="datePiece">{{this.additionDate}}</p>
              <p class="notesPiece">{{this.notes}}</p>
            </section>
            </a>
          {{/each}}
      </article>
        <section id="edited">
              <h2 class="titlePiece" id="titleDisplay">titre</h2>
              <p class="datePiece" id="dateDisplay">date</p>
              <textarea class="notesPiece" name="notes"></textarea>
        </section>
    </main>
    {{>footer}}
  </body>
  <script>
    function dispalySelection(selectedTitle){
      document.getElementById("titleDisplay").innerHTML = selectedTitle;
      console.log(selectedTitle);
    }
      //const res = await fetch("/api/section",{})


  </script>
</html>